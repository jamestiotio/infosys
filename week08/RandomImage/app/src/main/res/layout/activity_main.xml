<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewRandomImages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Random Images"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/charaImage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ashketchum" />

    <Button
        android:id="@+id/charaButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Show Next Image" />

    <Button
        android:id="@+id/firstCharaButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Show First Image" />

</LinearLayout>